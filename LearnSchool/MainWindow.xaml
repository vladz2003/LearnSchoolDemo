<Window x:Class="LearnSchool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LearnSchool"
        mc:Ignorable="d"
        Title="Autorization" Width="750" MinWidth="750" 
        Icon="Resources/school_logo.ico">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>
        <Rectangle Fill="{StaticResource SecondColor}"/>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="20">
            <Image Source="Resources/school_logo.png" Height="150"/>
            <TextBlock Text="Школа языков Learn" FontSize="36" />
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="20">            
            <TextBlock Text="Код администратора:" FontSize="24"></TextBlock>
            <TextBox x:Name="TextBoxAdminCode" Height="40" Width="320" BorderBrush="Black" FontSize="20"></TextBox>
            <Button Content="Войти" x:Name="ButtonSignIn" Click="ButtonSignIn_Click" FontSize="24" FontWeight="Bold" BorderBrush="Black"></Button>
        </StackPanel>

        
    </Grid>
</Window>
